# ========================================
# Enterprise RAG Chatbot Configuration
# ========================================

# ==== AI PROVIDERS ====
# OpenAI (Primary LLM & Embeddings)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic (Alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google AI (Alternative LLM)  
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# ==== RAG PIPELINE CONFIGURATION ====
# Document Processing
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=4000

# Retrieval Settings
DEFAULT_TOP_K=5
SIMILARITY_THRESHOLD=0.7
ENABLE_RERANKING=false

# Generation Settings
DEFAULT_MODEL=auto
MAX_TOKENS=2000
TEMPERATURE=0.1

# ==== VECTOR DATABASE ====
# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=data/chroma_db
CHROMA_COLLECTION_NAME=enterprise_documents
CHROMA_DISTANCE_FUNCTION=cosine

# ==== SERVER SETTINGS ====
# Backend API
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Streamlit
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# CORS & Security
CORS_ORIGINS=*
SECRET_KEY=your_secret_key_here

# ==== DOCUMENT PROCESSING ====
# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,docx,md

# OCR Settings (for image processing)
OCR_ENABLED=true
OCR_LANGUAGES=th,en,ja
OCR_CONFIDENCE_THRESHOLD=0.6

# ==== SYSTEM SETTINGS ====
# Logging
LOG_LEVEL=INFO
DEBUG=false

# Environment
ENVIRONMENT=development

# ==== OPTIONAL FEATURES ====
# Advanced Features
ENABLE_CONVERSATION_MEMORY=true
ENABLE_SOURCE_CITATION=true
ENABLE_CONFIDENCE_SCORING=true

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090